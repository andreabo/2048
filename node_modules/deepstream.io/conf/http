const http = require('http')

const write_record_post = {
  authData: {
    username: 'userRecordAdmin',
    password: ''
  },
  body: [{
    topic: 'record',
    action: 'write',
    recordName: 'testrecord',
    data: {
      someFlag: true
    }
  }]
};

const post_options = {
  host: 'localhost',
  port: '8080',
  path: '/',
  method: 'POST',
  headers: {
    'Content-Type': 'application/json'
  }
};

const post_req = http.request(post_options, function(res) {
 res.setEncoding('utf8');
 res.on('data', function (chunk) {
   console.log('Response: ' + chunk);
 });
});

post_req.write(JSON.stringify(write_record_post));
post_req.end();
